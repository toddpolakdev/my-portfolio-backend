{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "scripts"],
  "include": ["api/**/*.ts", "graphql/**/*.ts", "mongo.ts"]
}
